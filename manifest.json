{
    "manifest_version": 2,

    "name": "Simple Notepad",
    "description": "Simple notepad extension that saves what you jot down",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["popup.js"]
    },

    "permissions": [
        "activeTab",
        "storage"
        ]
}
